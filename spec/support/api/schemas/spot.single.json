{
  "type": "object",
  "required": ["spot", "images"],
  "properties": {
    "spot" : <%= schema_for("spot") %>,
    "images" : {
      "type" : "array",
      "items": <%= schema_for("image") %>
    }
  },
  "additionalProperties": {
    "meta": {
      "type": "object",
      "required": [
        "latitude",
        "longitude"
      ],
      "properties": {
        "latitude": { "type": "number" },
        "longitude": { "type": "number" }
      }
    }
  }
}
